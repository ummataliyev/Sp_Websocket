[Unit]
Description=gunicorn daemon
Requires=gunicorn.socket
After=network.target

[Service]
User=root
Group=www-data
WorkingDirectory=/root/blog-website
ExecStart=/root/websocket/venv/bin/gunicorn \
          --access-logfile - \
          --workers 3 \
          --bind unix:/run/web_chat.sock \
          chat.asgi:application 

[Install]
WantedBy=multi-user.target
